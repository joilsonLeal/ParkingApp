@model ParkingModel

<div>
    <h4>Parking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class = "col-sm-2">
            Registered
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegisteredDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div class="row" style="display:flex; justify-content:center;">
    <div class="col-md-4">
        @if (User.Identity.Name == Model.User.Name)
        {
            @Html.ActionLink("Edit", "Edit", new { }, new { @class = "btn btn-warning btn-sm" })
        }
        @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-success btn-sm" })
    </div>
</div>
